cd $INPUTDIR

if [ "$LOCATION" == "CERN" ]
then
    echo "executable              = $RUNFILE" >> gen1/$CONDORFILE
    echo "arguments               = $RUNFILE.\$(ClusterId)\$(ProcId)" >> gen1/$CONDORFILE
    echo "output                  = $RUNFILE.\$(ClusterId).\$(ProcId).out" >> gen1/$CONDORFILE
    echo "error                   = $RUNFILE.\$(ClusterId).\$(ProcId).err" >> gen1/$CONDORFILE
    echo "log                     = $runfilename.\$(ClusterId).\$(ProcId).log" >> gen1/$CONDORFILE
    echo "+JobFlavour = \"$QUEUE\"" >> gen1/$CONDORFILE
    echo "queue" >> gen1/$CONDORFILE
fi

X=2
while [ $X -le $XMAX ]
do
    cp -r gen1 gen$X
    sed s/"gen1"/"gen$X"/g gen$X/$RUNFILE > out
    mv out gen$X/$RUNFILE
    
# The space in " ${RAN[$X]}" is necessary otherwise the shell does not
# substitute
    sed s/"-123456789"/" ${RAN[$X]}"/ gen$X/r.in > out
    mv out gen$X/r.in

    X=$((X+1))
done

# Submission file
echo "#!/bin/bash" >> $SUBMITFILE
X=1
while [ $X -le $XMAX ]
do
# -u pippopluto to avoid being notified by mail when each execution is completed	
	case $LOCATION in


	        CERN )    echo "cd $INPUTDIR/gen$X; condor_submit  $CONDORFILE" >> $SUBMITFILE ;;


		TO )      echo "subcheck $INPUTDIR/gen$X $RUNFILE $QUEUE" >> $SUBMITFILE ;;
	esac
    
    X=$((X+1))
done

chmod +x  $SUBMITFILE  

exit


