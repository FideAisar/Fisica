#!/bin/bash

# This script assumes that you have already created a working directory gen1
#  with the correct r.in and run files (if running at CERN also the condor.sub script), 
# and that in r.in idum is -123456789 
# The script, starting from gen1 creates other XMAX-1 directories with proper
#  run and different idum random number seeds in r.in. 
# XMAX must be  <= 50.


RUNFILE=run
SUBMITFILE=submitfile
CONDORFILE=condor.sub


NPARAMETER=8
if [ $# -ne $NPARAMETER ]
then
        echo "Usage:"
        echo ""
        echo "gendir.scr -l LOCATION -q QUEUE -d NDIR -i INPUTDIR"
        echo "        LOCATION = TO, CERN"
        echo "        QUEUE = local queue (TO: slow; CERN: espresso, microcentury, longlunch, workday, tomorrow, testmatch, nextweek)" 
        echo "        NDIR = Number of generation samples (max 100)"
        echo "        INPUTDIR = location of the gen1 prototype"
        echo ""
        echo "ALL PARAMETRS >MUST< BE SUPPLIED"
        echo ""
        exit
fi

while [ -n "$(echo $1 | grep '-')" ]; do
	echo "processing $1"
	case $1 in
	        -l ) LOCATION=$2 ;;
	        -d ) XMAX=$2 ;;
	        -i ) INPUTDIR=$2 ;;
	        -q ) QUEUE=$2 ;;
	         * ) echo "Unrecognized parameter: $1 $2";exit;
	esac
	
        shift 2
done

