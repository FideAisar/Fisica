% esempio,teorema,definizione
\newcommand{\esempio}[2]{
	\begin{es}{#1}
		#2
	\end{es}
}
\newcommand{\definizione}[2]{
	\begin{center}
		\fboxsep11pt
		\colorbox{BLUE}{\begin{minipage}{5.75in}
				\begin{blues}{Definizione: #1}
					#2
				\end{blues}
		\end{minipage}}
	\end{center}
}
\newcommand{\teorema}[2]{
	\begin{center}
		\fboxsep11pt
		\colorbox{RED}{\begin{minipage}{5.75in}
				\begin{redes}{#1}
					#2
				\end{redes}
		\end{minipage}}
	\end{center}
}
\newcommand{\dimostrazione}[2]{
	\begin{dym}{dimostrazione#1}
		#2
		\QEDB
	\end{dym}
}
\newcommand{\corollario}[2]{
	\begin{center}
		\begin{coroll}{corollario#1}
			#2
		\end{coroll}
	\end{center}
}
\newcommand{\nota}[2]{
	\begin{attenzione}{Nota:}
		#2
	\end{attenzione}
}

